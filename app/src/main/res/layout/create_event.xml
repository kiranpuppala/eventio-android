<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.app.kiranpuppala.event.MainActivity">


        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Event"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="#000"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textSize="24dp"
                    android:layout_marginBottom="15dp"
                    />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:background="@android:color/darker_gray">

                <ImageView
                    android:id="@+id/eventImage"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:id="@+id/galleryPick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/sf_pro_bold"
                        android:textSize="20dp"
                        />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <EditText
                    android:id="@+id/eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Clg fest"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/eventNameErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lorem ipsu"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/eventDescErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.75"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >

                    <Spinner
                        android:id="@+id/event_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                   <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Date"
                            android:textColor="#000"
                            android:alpha="0.75"
                            android:textSize="14dp"
                            android:fontFamily="@font/sf_pro_medium"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >


                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="4dp"
                                android:src="@drawable/ic_date_range_black_24dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/fromDateText"
                                android:text="From"
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:alpha="0.5"
                                android:fontFamily="@font/sf_pro_regular"
                                />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>

                            <ImageView
                                android:id="@+id/fromDate"
                                android:src="@drawable/ic_mode_edit_black_24dp"
                                android:layout_width="16dp"
                                android:layout_height="16dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginRight="4dp"
                                    android:src="@drawable/ic_date_range_black_24dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/toDateText"
                                    android:text="To"
                                    android:textSize="12dp"
                                    android:textColor="#000"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/sf_pro_regular"
                                    />
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/toDate"
                                    android:src="@drawable/ic_mode_edit_black_24dp"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Duration"
                                android:textColor="#000"
                                android:alpha="0.75"
                                android:textSize="14dp"
                                android:fontFamily="@font/sf_pro_medium"
                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginRight="4dp"
                                    android:src="@drawable/ic_access_time_black_24dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="From"
                                    android:textSize="12dp"
                                    android:id="@+id/fromTimeText"
                                    android:textColor="#000"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/sf_pro_regular"
                                    />

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/fromTime"
                                    android:src="@drawable/ic_mode_edit_black_24dp"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginRight="4dp"
                                    android:src="@drawable/ic_access_time_black_24dp"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="To"
                                    android:id="@+id/toTimeText"
                                    android:textSize="12dp"
                                    android:textColor="#000"
                                    android:alpha="0.5"
                                    android:fontFamily="@font/sf_pro_regular"
                                    />

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                                <ImageView
                                    android:id="@+id/toTime"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/ic_mode_edit_black_24dp"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Venue"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bhimavaram"
                        android:fontFamily="@font/sf_pro_bold"
                        android:textSize="16dp"
                        />
                    <ImageView
                        android:id="@+id/venuePick"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_searching_black_24dp"
                        />
                    
                </RelativeLayout>

                <TextView
                    android:id="@+id/venueErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coordinators"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:alpha="0.75"
                    android:textSize="14dp"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/coordinatorListView"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/coordinatorInput"
                        android:layout_width="50dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_bold"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Person"
                        android:textSize="12dp"
                        android:id="@+id/addCoordinator"
                        android:fontFamily="@font/sf_pro_regular"
                        android:textColor="@android:color/black"
                        android:alpha="0.5"/>


                </LinearLayout>




                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="+91 9090282020"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/mobileErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />


                <TextView
                    android:id="@+id/socialErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="email@gmail.com"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:textSize="16dp"
                    />

                <TextView
                    android:id="@+id/emailErr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is help text"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:alpha="0.54"
                    android:fontFamily="@font/sf_pro_medium"
                    />

                <LinearLayout
                    android:id="@+id/createEvent"
                    android:background="@drawable/rounded_button"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATE EVENT"
                        android:fontFamily="@font/sf_pro_medium"
                        android:textSize="16dp"
                        android:textColor="#fff"
                        />

                </LinearLayout>


            </LinearLayout>





        </LinearLayout>

    </ScrollView>
</LinearLayout>